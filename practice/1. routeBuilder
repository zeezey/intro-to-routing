//I have a route called people , replace the ...

.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when( '/people'  , {
        templateUrl: 'templates/list_of_people.html',
        controller: 'PeopleListController'
    })

//I want to set up a route called people and look at 1 person, replace the ...

.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when( '/people/:personId' , {
        templateUrl: 'templates/person_details.html',
        controller: 'PersonDetailsController'
    })

//I want to setup a route called settings, replace the ...

.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when( '/settings' , {
        templateUrl: 'templates/settings.html',
        controller: 'SettingsController'
    })

//I want to setup a route called people and I'm looking at 1 person.  I also have a sub-route called activities and I'm looking at a specific activity, replace the ...


.config(['$routeProvider',
  function($routeProvider) {
    $routeProvider.
      when( '/people/:personId/activities/:activityId' , {
        templateUrl: 'templates/activity.html',
        controller: 'ActivityController'
    })